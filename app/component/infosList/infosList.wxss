:host{
  display: block;
}
.list-div {
  padding-left: 20px;
}
.list-infos{
  display: flex;
  padding: 10px 0;
  border-bottom: 1px solid #ddd;
}
.list-infos .list-left{
  flex:1;
  padding-right:10px;
}
.list-infos .list-right{
  flex:0 0 100px;
}
.list-infos .title {
  display: -webkit-box;
  overflow: hidden;
  -webkit-line-clamp: 2;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  line-height: 1.6;
  color: #333;
  font-size: 16px;
  font-weight: 700;
}
.list-infos .img-box {
  width: 80px;
  height: 80px;
}
.list-infos .list-img {
  width: 100%;
  height: 100%;
}
.list-infos .brief-div {
  margin-top: 15px;
  font-size: 12px;
}
.list-infos .color-6 {
  color: #666;
}
.list-infos .date{
  margin-right: 40px;
}
.list-infos .type {
  margin-left:30px;
  padding:0 10px;
  color: #999;
  border: 1px solid #ddd;
  border-radius: 10px;
}