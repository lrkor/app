<view class="container">
    <!-- tab导航栏 -->
    <!-- scroll-left属性可以控制滚动条位置 -->
    <!-- scroll-with-animation滚动添加动画过渡 -->
    <scroll-view scroll-x="true" class="nav" scroll-left="{{navScrollLeft}}" scroll-with-animation="{{true}}">
        <block wx:for="{{navData}}" wx:for-index="idx" wx:for-item="navItem" wx:key="idx">
            <view class="nav-item {{currentTab == idx ?'active':''}}" data-current="{{idx}}" bindtap="switchNav">{{navItem.text}}</view>
        </block>
    </scroll-view>
    <!-- 页面内容 -->
    <swiper class="tab-box" current="{{currentTab}}" duration="300" bindchange="switchTab">
        <swiper-item wx:for="{{[0,1,2,3,4,5,6,7,8]}}" wx:for-item="tabItem" wx:for-index="idx" wx:key="idx" class="tab-content">
            <!-- <infosList wx:if="{{item.type1}}" class='infos-list' id="infosList" wx:for="{{infosArray}}" wx:key="unique"
                title="{{item.title}}" viewNum="{{item.viewNum}}" date="{{item.date}}" type1="{{item.type1}}">
            </infosList> -->
            <block wx:for="{{infosArray}}" wx:key="id">
                <view wx:if="{{item.type1==1}}" class='list-div'>
                    <view class='list-infos'>
                        <view class='list-left'>
                            <view class='title-div'>
                                <text class='icon-top'></text>
                                <text class='title'>{{item.title}}</text>
                            </view>
                            <view class='brief-div'>
                                <text class='date color-6'>{{item.date}}</text>
                                <text class='view-num color-6'>{{item.viewNum}}</text>
                            </view>
                        </view>
                        <view class='list-right'>
                            <view class='img-box'>
                                <image class='list-img' src='/images/info.png' mode="widthFix"></image>
                            </view>
                        </view>
                    </view>
                </view>
                <view wx:elif="{{item.type1==2}}" class='list-div'>
                    <view class='list-infos'>
                        <view class='list-left'>
                            <view class='title-div'>
                                <text class='icon-top'></text>
                                <text class='title'>{{item.title}}</text>
                            </view>
                            <view class='brief-div'>
                                <text class='date color-6'>{{item.date}}</text>
                                <text class='view-num color-6'>{{item.viewNum}}</text>
                            </view>
                        </view>
                    </view>
                </view>
                <view wx:else="{{item.type1==3}}" class='list-div'>
                    <view class='list-infos1'>
                        <view class="enTop">
                            {{item.title}}
                        </view>
                        <view class="enMiddle">
                            <view class='img-box'>
                                <image class='list-img' src='/images/info.png' mode="widthFix"></image>
                            </view>
                            <view class='img-box'>
                                <image class='list-img' src='/images/info.png' mode="widthFix"></image>
                            </view>
                            <view class='img-box'>
                                <image class='list-img' src='/images/info.png' mode="widthFix"></image>
                            </view>
                        </view>
                        <view class="enDow">
                            <text class='date color-6'>{{item.date}}</text>
                            <text class='view-num color-6'>{{item.viewNum}}</text>
                        </view>
                    </view>
                </view>
            </block>
        </swiper-item>
    </swiper>
</view>