<view class="login-page">
  <view class="login-input">
    <input class="login_input" type="text" placeholder="请输入账号" bindinput="listenerUsernameInput"></input>
  </view>
   <view class="login-input">
    <input class="login_input" type="password" placeholder="请输入密码" bindinput="listenerPasswordInput"></input>
    <view class="pwd-txt" wx:if="{{showTxt}}">密码错误</view>
  </view>
  <button class="btn-bind" bindtap="loginAction">确认绑定</button>
</view>