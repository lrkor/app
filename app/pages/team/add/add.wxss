@import "../../../libs/css/weui.wxss";
.weui-cells {
    position: static;
    margin-top: 0;
}

.weui-uploader__img {
    width: 160rpx;
    height: 160rpx;
}

.weui-uploader__file {
    margin-right: 17rpx;
    margin-bottom: 15rpx;
}

.weui-cells::before {
    border: none;
}

.weui-cells::after {
    border: none;
}

page {
    background-color: #f7f7f7;
}

.add {
    border-top: 1px solid #f1f1f1;
    background-color: #f7f7f7;
}

.img_list{
    margin-bottom: 10px;
}

.title_list {
    display: flex;
    flex-direction: column;
    background-color: #fff;
}

.title_item {
    box-sizing: border-box;
    display: flex;
    padding: 13px 30rpx;
    font-size: 30rpx;
    color: #333;
    justify-content: space-between;
}

.title_item_right {
    width: 72%;
}

.border_f1 {
    border-bottom: 1px solid #f1f1f1;
}

.color_ccc {
    color: #ccc;
}

.page-body-info {
    display: flex;
    flex-direction: column;
    margin-top: 10px;
    margin-bottom: 70px;
    padding: 0;
    height: 380rpx;
    align-items: center;
    justify-content: center;
    background-color: #fff;
}

.image-plus {
    width: 150rpx;
    height: 150rpx;
    position: relative;
}

.image-plus-horizontal {
    position: absolute;
    top: 50%;
    left: 50%;
    background-color: #d9d9d9;
    width: 4rpx;
    height: 80rpx;
    transform: translate(-50%, -50%);
}

.image-plus-vertical {
    position: absolute;
    top: 50%;
    left: 50%;
    background-color: #d9d9d9;
    width: 80rpx;
    height: 4rpx;
    transform: translate(-50%, -50%);
}

.image-plus-text {
    color: #888888;
    font-size: 28rpx;
}

video {
    width: 100%;
    height: 380rpx;
}

.btn {
    position: fixed;
    bottom: 0;
    width: 100%;
}

.btn .van-button--large {
    height: 88rpx;
    line-height: 88rpx;
    background-color: #2E85D6;
    color: #fff;
    font-size: 36rpx;
}

.add .van-popup--right {
    width: 80%;
    height: 100%;
    border-top: 1px solid #f1f1f1;
    background-color: #f7f7f7;
}

.select_person {
    width: 100%;
    height: 100%;
    position: relative;
}

.select_person .popup_btn {
    position: absolute;
    bottom: 10px;
    width: 100%;
}

.select_person .popup_btn1 {
    padding: 0 20rpx;
}

.popup_btn1 .van-button--large {
    height: 40px;
    line-height: 40px;
    background-color: #2E85D6;
    color: #fff;
    font-size: 36rpx;
}

.popup_top {
    display: flex;
    justify-content: space-between;
    background-color: #fff;
    padding: 10px 20rpx;
}

.popup_top_left {
    font-size: 34rpx;
}

.popup_top .van-button--normal {
    width: 140rpx;
    height: 30px;
    line-height: 30px;
    padding: 0;
    font-size: 26rpx;
}

.popup_top_right {
    display: flex;
    align-items: center;
}

.cancel, .check_all {
    width: 140rpx;
    height: 32px;
    display: flex;
}

.check_all {
    margin-left: 20rpx;
}

.check_all .van-button--normal {
    border-color: #00A0E9;
    color: #00A0E9;
}

.cancel .van-button--normal {
    border-color: #EBEDF0;
    color: #666666;
}

.popup_list{
    margin-top: 10px;
    max-height: 80%;
    overflow-y: scroll;
}

.popup_list .van-cell{
    font-size: 30rpx;
}
.img{
    display: flex;
    align-items: center;
    height: 100%;
    margin-right: 19rpx;
}
.img image{
    width: 40rpx;
    height: 40rpx;
}

.popup_list .van-cell__title{
    flex: auto;
    width: 60%;
}