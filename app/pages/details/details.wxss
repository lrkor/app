@import"../../wxParse/wxParse.wxss";

.detail-page {
  padding: 0 30rpx;
}
.detail-title {
  font-size: 36rpx;
  color: #222;
}
.title-brief {
  margin-top: 20rpx;
  height: 48rpx;
  line-height: 48rpx;
  border-bottom: 1px solid #e8e8e8;
  font-size: 24rpx;
  color: #999;
}
.pull-left {
  float: left;
}
.pull-right {
  float: right;
}
.content-title {
  font-size: 20px;
  font-weight: 700;
  color: #333;
  text-align: center;
}
.detail-content {
  padding-top: 30rpx;
  clear: both;
}
.content {
  margin: 15px 0;
  font-size: 16px;
  line-height:2;
  color: #333;
}
.detail-content image{
  width: 100%;
  height: auto;
}