/**index.wxss**/

.flex-wrp {
  display: flex;
}

.clearfix:after {
  content: "020";
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;
}

.clearfix {
  /* 触发 hasLayout */
  zoom: 1;
}

.personal {
  font-family: 'PingFangSC-Regular, sans-serif';
}

.personal_information {
  padding: 50rpx 0;
}

.head_portrait {
  padding-right: 40rpx;
}

.name {
  font-size: 40rpx;
  font-weight: 700;
  font-family: 'PingFangSC-Regular, sans-serif';
}

.engineeringName {
  margin: 17rpx 0;
}

.engineeringName, .orgName {
  font-size: 30rpx;
  font-weight: normal;
}

.bgc {
  height: 20rpx;
  background-color: #f7f7f7;
}

.switch {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  font-weight: normal;
  position: absolute;
  right: 0;
  top: 111rpx;
  background-color: #7fc8ed;
  padding: 13rpx 20rpx;
  color: #fff;
  border-top-left-radius: 25rpx;
  border-bottom-left-radius: 25rpx;
}

.switch_img {
  margin-left: 10rpx;
}

.functionItem {
  position: relative;
  font-size: 30rpx;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #ddd;
}

.functionItem_img, .functionItem_name {
  float: left;
}

.rigthArrow {
  padding-right: 30rpx;
  float: right;
}

.functionItem_img {
  margin: 0 30rpx;
}

.showModule {
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  left: 38%;
  bottom: 20%;
  height: 6vh;
  width: 24vw;
  opacity: 1;
  background-color: #3b3b3b;
  border-radius: 9rpx;
  z-index: 3001;
}

.showModule .text {
  display: flex;
  color: white;
  font-size: 13px;
}

.contact-us {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  opacity: 0;
}

.detail-hover {
  color: rgba(0, 0, 0, 0.6);
  background-color: #dedede;
}
