.issue {
    background-color: #f7f7f7;
    height: 100%;
    border-top: 1px solid #F1F1F1;
}

.issue .list .van-cell::after {
    left: 0px;
}

.issue .van-field__input--disabled {
    color: #333;
}

.issue .van-popup--right {
    width: 70%;
    height: 100%;
}

.requirements {
    min-height: 200rpx;
    background-color: #fff;
}

.list {
    margin-top: 20rpx;
}

.btn {
    position: fixed;
    width: 100%;
    bottom: 0;
}

.btn .van-button--large{
    border: none;
    background-color: #2E85D6;
    height: 98rpx;
    line-height: 98rpx;
    color: #fff;
    font-size: 36rpx;
    border-radius: 0;
}

.problem {
    height: 100%;
    position: relative;
}

.problem_list {
    height: 93%;
    overflow-y: scroll;
}

.problem_btn {
    position: absolute;
    bottom: 0;
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    color: #2E85D6;
    text-align: center;
    border-radius: 8px;
    font-size: 36rpx;
    border-top: 1px solid #f1f1f1;
}

.problem .van-cell__title {
    width: 93%;
    flex: none
}

.problem .van-cell__value {
    flex: none
}