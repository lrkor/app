<view class="process">
    <view class="process_lsit">
        <view class="process_item">
            <view class="process_item_top">
                <view class="item_left">
                    <view class="point"></view>
                    <view class="title">发起检查</view>
                </view>
                <view class="item_right">
                    <view class="name">张三</view>
                    <view class="time">03-04 11:22</view>
                </view>
            </view>
            <view class="process_item_down">
                <view class="result color_999">现场描述：{{describe}}</view>
            </view>
        </view>
        <view class="process_item">
            <view class="process_item_top">
                <view class="item_left">
                    <view class="point"></view>
                    <view class="title">下发整改</view>
                </view>
                <view class="item_right">
                    <view class="name">张三</view>
                    <view class="time">03-04 11:22</view>
                </view>
            </view>
            <view class="process_item_down">
                <view class="result color_999">整改要求：{{demand}}</view>
            </view>
        </view>
        <block wx:for="{{list}}" wx:key="{{item.index}}">
            <view class="process_item">
                <view class="process_item_top">
                    <view class="item_left">
                        <view class="point {{item.status==0?'bc_red':''}}"></view>
                        <view class="title">发起检查</view>
                    </view>
                    <view class="item_right">
                        <view class="name">张三</view>
                        <view class="time">{{item.time}}</view>
                    </view>
                </view>
                <view class="process_item_down {{item.status==0?'color_red':'color_bule'}}">
                    <view class="result">审批结果：{{item.result}}</view>
                    <view class="opinion">审批意见：{{item.opinion}}</view>
                </view>
            </view>
        </block>
    </view>
    <view class="isComplete">
        <image class="img" src="../../../images/patrol/1.png"/>
        <view class="text">已完成</view>
    </view>
</view>