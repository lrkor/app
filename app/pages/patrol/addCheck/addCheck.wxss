@import "../../../libs/css/weui.wxss";
.weui-uploader__input-box {
    border: 1px dashed #D9D9D9;
}

.weui-uploader__img {
    width: 160rpx;
    height: 160rpx;
}

.weui-uploader__file {
    margin-right: 17rpx;
    margin-bottom: 15rpx;
}
.weui-cells {
    position: static;
    margin-top: 0;
}
.weui-cells::before{
    border: none;
}
.weui-cells::after{
    border: none;
}

.add_check .van-field__input--disabled{
    color: #333;
}

.add_check .van-cell::after{
    left: 0;
}
.add_check {
    background-color: #f7f7f7;
    height: 100%;
    border-top: 1px solid #f1f1f1;
}

.addDescribe {
    background-color: #fff;
}

.add_check_down {
    margin-top: 20rpx;
}

.location {
    display: flex;
    flex-direction: row;
    background-color: #fff;
    padding: 0 30rpx;
    height: 100rpx;
    line-height: 100rpx;
    justify-content: space-between;
    font-size: 30rpx;
    /* border-bottom: 1px solid #f1f1f1; */
}

.location_name {
    color: #333;
}

.isGet {
    color: #2E85D6;
}

.onGet {
    color: #FF0000;
}

.check_result {
    display: flex;
    flex-direction: row;
    background-color: #fff;
    border-bottom: 1px solid #f1f1f1;
    padding: 0 30rpx;
    height: 100rpx;
    line-height: 100rpx;
    font-size: 30rpx;
}

.check_result_name {
    width: 180rpx;
    color: #333;
}

.check_result_menu {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.check_result_item {
    width: 130rpx;
    height: 40rpx;
    text-align: center;
    margin-right: 20rpx;
    background-color: #f7f7f7;
    color: #999;
    line-height: 40rpx;
    font-size: 26rpx;
    border-radius: 5px;
}

.qualified {
    background-color: #13C37F;
    color: #fff;
}

.warning {
    background-color: #FFCC00;
    color: #fff;
}

.rectification {
    background-color: #FF0000;
    color: #fff;
}

.btn {
    position: fixed;
    width: 100%;
    bottom: 0;
}
.btn .van-button--large{
    border: none;
    background-color: #2E85D6;
    height: 98rpx;
    line-height: 98rpx;
    color: #fff;
    font-size: 36rpx;
    border-radius: 0;
}

.field_div_content{
    color:#333;
    font-size:14px;
    padding:10px 15px;
}
.field_div_content1{
    min-height: 24px;
}
