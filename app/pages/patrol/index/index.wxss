.index{
    background-color: #f7f7f7;
    height: 100%;
}
.menu{
    height: 225rpx;
    width: 100%;
    display: flex;
    background-color: #fff;
    align-items: center;
    flex: auto;
    border-top:1px solid #F1F1F1;
}
.item{
    text-align: center;
    font-size: 30rpx;
    display: flex;
    flex-direction:column;
    flex-grow:1;
}
.img{
    height: 90rpx;
}
.text{
    font-size: 30rpx;
    color: #333;
    line-height: 1;
    margin-top: 14rpx;
}
.do_list{
    margin-top: 22rpx;
    padding-left: 30rpx;
    background-color: #ffffff;
}
.do_item{
    display: flex;
    flex: auto;
    height: 100rpx;
    flex-direction:row;
    font-size: 30rpx;
}
.do_item_left{
    display: flex;
    align-items: center;
}
.do_item_right{
    display: flex;
    align-items: center;
    justify-content:space-between;
    margin-left: 20rpx;
    width: 664rpx;
    border-bottom: 1rpx solid #F1F1F1;
    padding-right: 30rpx;
}
.do_item_right_right{
    display: flex;
}
.num{
    color: #FE0000;
    margin-right:20rpx;
}
.b_l_r{
    border-left: 1rpx solid #f1f1f1;
    border-right: 1rpx solid #f1f1f1;
}
.btn{
    position: fixed;
    width: 100%;
    bottom: 0;
    border-top: 1px solid #f1f1f1;
}
.btn .van-button--large{
    border: none;
    height: 98rpx;
    line-height: 98rpx;
    background-color: #fff;
    color: #2E85D6;
    font-size: 36rpx
}
.setImg{
    width: 36rpx;
    height: 34rpx;
}