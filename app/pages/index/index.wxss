.clearfix:after {
  content: "020";
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;
}

.clearfix {
  zoom: 1;
}

.index {
  font-size: 28rpx;
}

.title {
  height: 65rpx;
  line-height: 65rpx;
}

.flex-wrp {
  display: flex;
}

.flex-item-25 {
  width: 25%;
}

.flex-item-V {
  margin: 0 auto;
  width: 200rpx;
  height: 200rpx;
}

.title_letf {
  padding-left: 33rpx;
  display: flex;
  flex: 1;
  align-items: center;
}

.title_right {
  text-align: right;
  padding-right: 33rpx;
}

.shuffling {
  padding: 0 30rpx;
}

.slide-image {
  width: 100%;
  border-radius: 10rpx;
}

.border-rd-10 {
