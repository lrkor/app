}

/* 小功能 */

.small_feature_swiper {
  padding-top: 40rpx;
  height: 125rpx;
}

.small_feature_li {
  position: relative;
  float: left;
  width: 25%;
  text-align: center;
}

.swiper_tab {
  display: flex;
  flex-direction: row;
  width: 60rpx;
  height: 13rpx;
  padding-top: 20rpx;
  padding-bottom: 10rpx;
  margin: 0 auto;
}

.tab-item {
  width: 20rpx;
  height: 5rpx;
  background-color: #c5c6c6;
  margin-left: 10rpx;
  border-radius: 5rpx;
}

.active {
  background-color: #3497fc;
}

.bgc {
  width: 100%;
  height: 20rpx;
  background-color: #f7f7f7;
}

