/**app.wxss**/
page{
  height: 100%;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
  font-family: Microsoft YaHei;
} 
page .van-cell__right-icon-wrap{
  color: #c4c4c9;
}

.border-scale {
  position: relative;
}

.border-scale:after {
  content: "  ";
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 1px;
  background-color: #ebedf0;
  /* 如果不用 background-color, 使用 border-top:1px solid #f00; 效果是一样的*/
  -webkit-transform: scaleY(.5);
  transform: scaleY(.5);
}


